<div class="centered-div">
  <h1>Add new transaction</h1>
  <%= form_with model: Transaction.new do |form| %>
    <% Transaction.column_names.reject { |a| fields_to_exclude.include?(a)}.each do |field| %>
      <div class="inputs-wrapper">
        <%= form.label field.humanize, for: "transaction_#{field.to_sym}" %>
        <%= form.text_field field.to_sym, required: true %>
      </div>
    <% end %>
    <div class="submit-buttons-wrapper">
      <%= link_to "Back", transactions_pages_path %>
      <%= form.submit "Save" %>
    </div>
  <% end %>
</div>
