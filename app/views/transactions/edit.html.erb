<div class="centered-div">
  <h1>Edit transaction</h1>
  <%= form_with model: @transaction, class:'form' do |form| %>
  <div class="inputs-wrapper gap">
    <%= label_tag :client_id %>
    <%= form.select :client_id, options_from_collection_for_select(Client.all, :id, :full_name, @transaction.client_id), required: true %>
    <%= label_tag :car_id %>
    <%= form.select :car_id, options_from_collection_for_select(Car.all, :id, :car_name, @transaction.car_id), required: true %>
    <%= label_tag :gas_station_id %>
    <%= form.select :gas_station_id, options_from_collection_for_select(GasStation.all, :id, :address, @transaction.gas_station_id), required: true %>
    <%= label_tag :fuel_id %>
    <%= form.select :fuel_id, options_from_collection_for_select(Fuel.all, :id, :type_fuel, @transaction.fuel_id), required: true %>
    <%= label_tag :fuel_volume %>
    <%= form.text_field :fuel_volume, required: true %>
    <%= label_tag :datatime_refueling %>
    <%= form.text_field :datatime_refueling, required: true %>
    <%= label_tag :total_cost %>
    <%= form.text_field :total_cost, required: true %>
    <%= label_tag :administrator %>
    <%= form.text_field :administrator, required: true %>
  </div>
    <div class="blockSubmitWrapper">
      <%= link_to "Back", transactions_pages_path, class:'wrapperButton back' %>
      <%= form.submit "Save", class:'wrapperButton saved' %>
    </div>
  <% end %>
</div>
